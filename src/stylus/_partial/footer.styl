$small_icon
  padding-left 25px
  position relative
  &:before
    position absolute
    top 3px
    left 0
    content ''
    width 20px
    height @width

.footer
  background #1C1C1C
  color #cacaca
  font-size .9rem
  line-height 1.2
  .section-title
    color #6c6c6c
    padding-bottom 15px
  .info
    @extend $clearfix
    margin 0 -25px
    padding 50px 0
    line-height 1.5
    p
      margin 0
      margin-bottom 20px
    .col
      float left
      width 25%
      padding 0 25px
    .location
      @extend $small_icon
      &:before
        @extend $icon
        spritePosition($location)
    .email
      @extend $small_icon
      &:before
        @extend $icon
        spritePosition($email)
        top 40%
    .phone
      @extend $small_icon
      &:before
        @extend $icon
        spritePosition($phone)
        top 20%
  .copyright
    border-top 2px solid rgba(255, 255, 255, 0.11)
    padding 30px 0 10px
  .popular
    .post p:first-child
      margin-bottom 0px
    .date
      @extend $slab-font
      font-size .75rem
  .twitter
    .twitt
      margin-bottom 20px
      @extend $small_icon
      &:before
        @extend $icon
        spritePosition($twitter)
        top 8%
