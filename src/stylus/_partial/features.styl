.features
  padding-top 60px
  &-list
    @extend $clearfix
    padding-bottom 58px
    border-bottom 2px solid rgba(0, 0, 0, 0.11)
  .feature
    float left
    width 25%
    padding-left 15px
    padding-right @padding-left
    text-align center
    .icon
      @extend $icon
      width: w = 90px
      height @width
      border-radius 50%
      margin auto
      &.icon-light
        background-color #9d9abf
        spriteP($light, w)
      &.icon-clock
        background-color #d2514b
        spriteP($clock, w)
      &.icon-chem
        background-color #66a3c6
        spriteP($chem, w)
      &.icon-money
        background-color #e8c04f
        spriteP($money, w)
    &-title
      @extend $slab-font
      color $base-color
      margin-top 20px
    &-desc
      color #616161
      font-size 1rem
      padding 0 15px
      line-height 1.5
      margin-top 10px
